    return array(
      'name' => t('Fingerprint'),
      'description' => t('Tests for fingerprint functionality'),
      'group' => t('Pronovix'),
    );
  }


  /**
  * Implementation of setUp().
  */
  function setUp() {
    parent::setUp('fingerprint', 'features');
  }


  /**
   * Tests a node creation
   */
  function testNodeAdd() {
    $u = $this->drupalCreateUser(array('create fingerprint content', 'delete own fingerprint content'));
    $this->drupalLogin($u);

    $html = $this->drupalGet('node/add/fingerprint');
    $edit = array();
    $this->drupalPost('node/add/fingerprint', $edit, 'Save');
  }


